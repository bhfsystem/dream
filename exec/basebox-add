#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"

  local nm_suffix="${1:-}"
  nm_suffix="${nm_suffix#:}"
  nm_suffix="${nm_suffix#-}"
  nm_suffix=":${nm_suffix}"

  local nm_provider="$VAGRANT_DEFAULT_PROVIDER"
  local pth_box="$(set +f; ls -trd "${BASEBOX_CACHE}/box/$nm_provider"/*.box | tail -1)"
  
  vagrant box add --name "${BASEBOX_NAME}:${nm_suffix}" "${pth_box}"
}

source sub "$0" "$@"

