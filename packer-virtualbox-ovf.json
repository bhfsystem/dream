{
  "builders": [
    {
      "vm_name": "{{ user `vm_name` }}",
      "shutdown_command": "sudo -S shutdown -h now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_private_key_file": "../base/.ssh/ssh-iso",
      "ssh_wait_timeout": "10000s",
      "ssh_handshake_attempts": 100,
      "output_directory": "{{ user `cache` }}/output/{{ user `vm_name` }}-{{ user `provider` }}",
      "post_shutdown_delay": "1m",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "type": "virtualbox-ovf",
      "source_path": "{{ user `source`}}",
      "guest_additions_mode": "disable",
      "headless": "{{ user `headless` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--paravirtprovider",
          "kvm"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype1",
          "virtio"
        ],
        [
          "storagectl",
          "{{.Name}}",
          "--name",
          "SATA Controller",
          "--hostiocache",
          "on"
        ],
        [
          "storageattach",
          "{{.Name}}",
          "--storagectl",
          "SATA Controller",
          "--port",
          "1",
          "--device",
          "0",
          "--type",
          "dvddrive",
          "--medium",
          "../base/cidata.iso"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype2",
          "virtio"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `cache` }}/box/{{ user `provider` }}/{{ user `vm_name` }}.box",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [],
      "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "../base/script/first.sh",
        "../base/script/last.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "source": "{{ env `BASEBOX_SOURCE` }}",
    "headless": "true"
  }
}
