{
  "builders": [
    {
      "vm_name": "{{ user `vm_name` }}",
      "headless": "{{ user `headless` }}",
      "shutdown_command": "sudo -S shutdown -h now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "ssh_handshake_attempts": 100,
      "output_directory": "{{ user `cache` }}/output/{{ user `vm_name` }}-{{ user `provider` }}",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "source_path": "{{ user `source`}}",
      "vmx_data": {
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}",
        "ethernet0.vnet": "vmnet3",
        "ethernet1.vnet": "vmnet3"
      },
      "type": "vmware-vmx"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `cache` }}/box/{{ user `provider` }}/{{ user `vm_name` }}.box",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}",
      "compression_level": 0
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [],
      "type": "shell",
      "skip_clean": "true"
    }
  ],
  "variables": {
    "vm_name": "{{ env `BASEBOX_NAME` }}",
    "cpus": "2",
    "disk_size": "100000",
    "memory": "2048",
    "ssh_fullname": "ubuntu",
    "ssh_password": "ubuntu",
    "ssh_username": "ubuntu",
    "ssh_host": "{{env `BASEBOX_REMOTE`}}",
    "ssh_private_key_file": "{{ env `LIMBO_HOME` }}/.ssh/ssh-vagrant",
    "vagrantfile_template": "",
    "cache": "{{ env `BASEBOX_CACHE` }}",
    "_CACHE_BUILDS_________________________________________________________": "",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "_VMX_BUILDS___________________________________________________________": "",
    "source": "{{ env `BASEBOX_SOURCE` }}",
    "headless": "true"
  }
}
