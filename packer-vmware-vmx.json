{
  "builders": [
    {
      "vm_name": "{{ user `vm_name` }}",
      "shutdown_command": "sudo -S shutdown -h now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "ssh_handshake_attempts": 100,
      "output_directory": "{{ user `cache` }}/output/{{ user `vm_name` }}-{{ user `provider` }}",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "type": "vmware-vmx",
      "source_path": "{{ user `source`}}",
      "headless": "{{ user `headless` }}",
      "vmx_data": {
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}",
        "ethernet0.vnet": "vmnet3",
        "ethernet1.vnet": "vmnet3"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `cache` }}/box/{{ user `provider` }}/{{ user `vm_name` }}.box",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [],
      "type": "shell"
    }
  ],
  "variables": {
    "source": "{{ env `BASEBOX_SOURCE` }}",
    "headless": "true"
  }
}
