{
  "builders": [
    {
      "vm_name": "{{ user `vm_name` }}",
      "shutdown_command": "sudo -S shutdown -h now",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "ssh_handshake_attempts": 100,
      "output_directory": "{{ user `cache` }}/output/{{ user `vm_name` }}-{{ user `provider` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "iso_urls": [
        "{{ user `source` }}"
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "http/{{ user `preseed` }}"
      ],
      "guest_os_type": "{{ user `os_type` }}",
      "boot_command": [
        "{{ user `boot_command` }}",
        "/install/vmlinuz noapic ",
        "file=/floppy/{{ user `preseed` }} ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ user `vm_name` }} ",
        "grub-installer/bootdev=/dev/sda<wait> ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "passwd/user-fullname={{ user `ssh_fullname` }} ",
        "passwd/user-password={{ user `ssh_password` }} ",
        "passwd/user-password-again={{ user `ssh_password` }} ",
        "passwd/username={{ user `ssh_username` }} ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "headless": "{{ user `headless` }}",
      "type": "virtualbox-iso",
      "hard_drive_interface": "sata",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--paravirtprovider",
          "kvm"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nictype1",
          "virtio"
        ],
        [
          "storagectl",
          "{{.Name}}",
          "--name",
          "SATA Controller",
          "--hostiocache",
          "on"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `cache` }}/box/{{ user `provider` }}/{{ user `vm_name` }}.box",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [],
      "type": "shell",
      "skip_clean": "true"
    }
  ],
  "variables": {
    "vm_name": "{{ env `BASEBOX_NAME` }}",
    "cpus": "2",
    "disk_size": "100000",
    "memory": "2048",
    "ssh_fullname": "ubuntu",
    "ssh_password": "ubuntu",
    "ssh_username": "ubuntu",
    "ssh_host": "{{env `BASEBOX_REMOTE`}}",
    "ssh_private_key_file": "{{ env `LIMBO_HOME` }}/.ssh/ssh-vagrant",
    "vagrantfile_template": "",
    "cache": "{{ env `BASEBOX_CACHE` }}",
    "_ISO_BUILDS___________________________________________________________": "",
    "source": "http://cdimage.ubuntu.com/releases/14.04.5/release/ubuntu-14.04.5-server-amd64+mac.iso",
    "iso_checksum": "1535fffab9d96f2c94414fe5929a1d8763fd96c7",
    "iso_checksum_type": "sha1",
    "preseed": "preseed.cfg",
    "os_type": "Ubuntu_64",
    "boot_command": "<esc><esc><enter><wait>",
    "headless": "true",
    "_CACHE_BUILDS_________________________________________________________": "",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  }
}
