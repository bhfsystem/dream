{
  "builders": [
    {
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "amazon-ebs",
      "source_ami": "{{ user `source` }}",
      "region": "{{ user `region` }}",
      "instance_type": "{{ user `instance_type` }}",
      "ami_name": "{{ user `target` }}",
      "run_tags": {
        "Provisioner": "packer"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `cache` }}/box/{{ user `provider` }}/{{ user `vm_name` }}.box",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [],
      "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "../base/script/first.sh",
        "../base/script/last.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "source": "{{ env `BASEBOX_SOURCE` }}",
    "target": "{{ env `EC2_TARGET_AMI_NAME` }}",
    "region": "{{ env `AWS_DEFAULT_REGION` }}",
    "instance_type": "{{ env `EC2_INSTANCE_TYPE` }}"
  }
}
