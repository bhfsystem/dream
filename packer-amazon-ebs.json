{
  "builders": [
    {
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_agent_auth": "true",
      "ssh_keypair_name": "{{ user `ssh_keypair` }}",
      "type": "amazon-ebs",
      "source_ami": "{{ user `source` }}",
      "region": "{{ user `region` }}",
      "instance_type": "{{ user `instance_type` }}",
      "ami_name": "{{ user `target` }}",
      "user_data_file": "{{ user `block_path` }}/base/cidata/user-data",
      "associate_public_ip_address": "{{ user `associate_public_ip_address` }}",
      "ssh_private_ip": "{{ user `ssh_private_ip` }}",
      "security_group_id": "{{ user `security_group_id` }",
      "subnet_id": "{{ user `subnet_id` }",
      "run_tags": {
        "Provisioner": "packer"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `cache` }}/box/{{ user `provider` }}/{{ user `vm_name` }}.box",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [],
      "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "../base/script/first.sh",
        "../base/script/last.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "block_path": "{{ env `BLOCK_PATH` }}",
    "source": "{{ env `BASEBOX_SOURCE` }}",
    "target": "{{ env `EC2_TARGET_AMI_NAME` }}",
    "region": "{{ env `AWS_DEFAULT_REGION` }}",
    "instance_type": "{{ env `EC2_INSTANCE_TYPE` }}",
    "ssh_keypair": "{{ env `AWS_KEYPAIR` }}",
    "associate_public_ip_address": "{{ env `AWS_PUBLIC` }}",
    "ssh_private_ip": "{{ env `AWS_PRIVATE` }}",
    "security_group_id": "{{ env `AWS_SG` }",
    "subnet_id": "{{ env `AWS_SUBNET` }"
  }
}
