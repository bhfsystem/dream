{
  "builders": [
    {
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "amazon-ebs",
      "access_key": "{{ user `access_key` }}",
      "secret_key": "{{ user `secret_key` }}",
      "source_ami": "{{ user `source_ami` }}",
      "region": "{{ user `region` }}",
      "instance_type": "{{ user `instance_type` }}",
      "ami_name": "{{ user `target_ami_name` }}",
      "run_tags": {
        "Provisioner": "packer"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `cache` }}/box/{{ user `provider` }}/{{ user `vm_name` }}.box",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}",
      "compression_level": 0
    }
  ],
  "provisioners": [
    {
      "environment_vars": [],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [],
      "type": "shell",
      "skip_clean": "true"
    }
  ],
  "variables": {
    "vm_name": "{{ env `BASEBOX_NAME` }}",
    "cpus": "2",
    "disk_size": "100000",
    "memory": "2048",
    "ssh_fullname": "ubuntu",
    "ssh_password": "ubuntu",
    "ssh_username": "ubuntu",
    "ssh_host": "{{env `BASEBOX_REMOTE`}}",
    "ssh_private_key_file": "{{ env `LIMBO_HOME` }}/.ssh/ssh-vagrant",
    "vagrantfile_template": "",
    "cache": "{{ env `BASEBOX_CACHE` }}",
    "_AWS_BUILDS___________________________________________________________": "",
    "access_key": "{{ env `AWS_ACCESS_KEY` }}",
    "secret_key": "{{ env `AWS_SECRET_KEY` }}",
    "region": "{{ env `AWS_REGION` }}",
    "source_ami": "{{ env `BASEBOX_SOURCE` }}",
    "target_ami_name": "{{ env `EC2_TARGET_AMI_NAME` }}",
    "instance_type": "{{ env `EC2_INSTANCE_TYPE` }}"
  }
}
